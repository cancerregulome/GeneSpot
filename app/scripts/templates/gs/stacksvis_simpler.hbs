{{#each items_by_tumor_type}}
<div id="stacksvis-{{../id}}-{{tumor_type}}">
    <ul class="nav nav-pills">
        <li>
            <a data-toggle="collapse" href="#cllpsr-{{../id}}-{{tumor_type}}">{{tumor_type}} <i class="icon-chevron-down"></i></a>
        </li>
        <li class="active"><a href="#tab-{{tumor_type}}-{{../id}}-heatmap" data-toggle="tab">heatmap</a></li>
        <li><a href="#tab-{{tumor_type}}-{{../id}}-data" data-toggle="tab">data</a></li>
    </ul>
    <div id="cllpsr-{{../id}}-{{tumor_type}}" class="collapse {{#unless @index}}in{{/unless}}">
        <div class="tab-content">
            <div class="tab-pane active" id="tab-{{tumor_type}}-{{../id}}-heatmap">
                <div class="heatmap-{{tumor_type}} stacksvis-heatmap"></div>
            </div>
            <div class="tab-pane" id="tab-{{tumor_type}}-{{../id}}-data">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                    <tr>
                        <td>Gene</td>
                        <td>Cytoband</td>
                        <td>Q-Value</td>
                        <td>Type</td>
                        <td>Samples (#/%NA)</td>
                        <td>Deletions (#/%)</td>
                        <td>Gains (#/%)</td>
                        <td>Mutations (#/%)</td>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{gene}}</td>
                        <td>{{cytoband}}</td>
                        <td>{{q_value}}
                        <td>{{type}}</td>
                        <td>{{samples.numberOf}} / {{samples.percentOf}}</td>
                        <td>{{deletions.numberOf}} / {{deletions.percentOf}}</td>
                        <td>{{gains.numberOf}} / {{gains.percentOf}}</td>
                        <td>{{mutations.numberOf}} / {{mutations.percentOf}}</td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{/each}}
