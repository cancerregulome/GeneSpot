<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>&nbsp;</th>
        {{#each headers}}
        <th>{{id}}</th>
        {{/each}}
    </tr>
    </thead>
    <tbody>
    {{#each rows}}
    <tr>
        <td>{{label}}</td>
        {{#each values}}
            <td class="{{cell_cls}}">{{cell_value}}</td>
        {{/each}}
    </tr>
    {{/each}}
    </tbody>
</table>