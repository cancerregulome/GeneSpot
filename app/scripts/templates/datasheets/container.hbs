<h4>Data Sheets</h4>
<div class="row">
    <div class="span4">
        <div class="input-append">
            <input type="text" class="new-datasheets-name" placeholder="New sheet name...">
            <button class="btn create-datasheets" type="button" title="Add a sheet"><i class="icon-plus"></i></button>
            <button class="btn refresh-datasheets" type="button" title="Reload sheets"><i class="icon-refresh"></i></button>
        </div>
    </div>
    <div class="span3">
        <span class="alert alert-danger invalid-datasheets-name hide">
            <strong>Error!</strong> Not a valid map sheet name
        </span>
        <span class="alert alert-danger duplicate-datasheets-name hide">
            <strong>Error!</strong> Sheet name already exists
        </span>
        <span class="alert alert-success datasheets-added-success hide">
            <strong>Success!</strong> New sheet added
        </span>
    </div>
</div>
<div class="row">
    <div class="span7">
        <div class="tabs-left">
            <ul class="nav nav-tabs datasheets">
                {{#each datasheets}}
                    <li{{#unless @index}} class="active"{{/unless}} data-id="{{id}}"><a
                            href="#tab-datasheets-{{id}}" data-toggle="tab">{{label}}</a></li>
                {{/each}}
            </ul>
        </div>

        <div class="tab-content">
            {{#each datasheets}}
                <div class="tab-pane{{#unless @index}} active{{/unless}}" id="tab-datasheets-{{id}}">
                    <div class="well">
                        <a href="{{url}}" target="_blank">open sheet (in new window)</a>
                    </div>
                    <div class="datasheets-infos"></div>
                    <hr/>
                    <div class="btn-group">
                        <button class="btn btn-small remove-datasheets" data-id="{{id}}" type="button"><i class="icon-trash"></i></button>
                        <button class="btn btn-small remove-datasheets" data-id="{{id}}" type="button">Delete sheet '{{label}}'</button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>