<style>
    .data_point {
        stroke-width: 0px;
        shape-rendering: crispEdges;
    }

    .axis path, .axis line {
        fill: none;
        stroke: #000;
        stroke-width: 2.0px;
        shape-rendering: crispEdges;
    }

    .kde_line {
        shape-rendering: none;
        stroke-width: 1.5px;
        visibility: hidden;
    }

    .y.axis path, .y.axis line {
        stroke: #aaa;
    }

    .x.axis path, .x.axis line {
        stroke: none;
    }

    .axis_label, .ticks {
        font-size: 16px;
    }

    .data_totals {
        font-size: 20px;
        font-weight: 400;
        shape-rendering: crispEdges;
    }

    .data_labels {
        font-size: 18px;
        font-weight: bold;
    }

    .cv {
        width: 540px;
        height: 405px;
    }

    .gene-feature-selectors {
        border-right-color: lightgray;
        border-right-width: 2px;
        border-right-style: solid;
    }

    .tumor-type-selector-scatterplot {
        margin-top: 0px;
        margin-bottom: 10px;
    }

    .tumor-type-selector-scatterplot .btn {
        border-bottom-width: 4px;
    }

    .sample-type-selector-scatterplot .btn {
        border-bottom-width: 4px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="span3 tumor-type-selector-scatterplot btn-group" data-toggle="buttons-radio">
            <button class="btn btn-small active" data-toggle="button" data-id="all_tumor_types">All</button>
            {{#each tumor_types}}
            <button class="btn btn-small" data-toggle="button" data-id="{{id}}" style="border-bottom-color: {{color}};">{{id}}</button>
            {{/each}}
        </div>
        {{#if sample_types}}
        <div class="span3 sample-type-selector-scatterplot btn-group" data-toggle="buttons-radio">
            <button class="btn btn-small active" data-toggle="button" data-id="all_sample_types">All Tissue Types</button>
            {{#each sample_types}}
            <button class="btn btn-small" data-toggle="button" data-id="{{key}}">{{label}}</button>
            {{/each}}
        </div>
        {{/if}}
    </div>
    <div class="row">
        <div class="span3 gene-feature-selectors">
            <div class="dropdown">
                <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="selected-gene-x">{{selected_genes.x}}</span> <b class="caret"></b></a>
                <ul class="dropdown-menu genes-selector-x" role="menu">
                    {{#each genes}}
                    <li><a href="#" onclick="return false;" data-id="{{.}}">{{.}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div class="feature-selector-x">Loading features...</div>
            <div class="dropdown">
                <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="selected-gene-y">{{selected_genes.y}}</span> <b class="caret"></b></a>
                <ul class="dropdown-menu genes-selector-y" role="menu">
                    {{#each genes}}
                    <li><a href="#" onclick="return false;" data-id="{{.}}">{{.}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div class="feature-selector-y">Loading features...</div>
        </div>
        <div class="span8">
            <div class="scatterplot-container well"></div>
            <div class="download-container well"></div>
        </div>
    </div>
</div>